<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head'); %>
    <style>
      .post-content {
        text-align: justify;
      }
    </style>
</head>

<body class="container">

  <header>
    <%- include('./partials/header'); %>
  </header>

  <main>

    <h2 style="text-align: left;">
      <%= isRoot ? 'My Drive' : folder.name %>
    </h2>
    <div class="content">
      <ul class="folder-list">
        <% if (!Array.isArray(folders) || folders.length===0) { %>
          <p>There are no folders here.</p>
          <% } else { %>
            <% folders.forEach(function(childFolder) { %>
              <li class="folder-icon">
                <a href="/folders/<%= childFolder.id %>" class="item-name">
                  <%= childFolder.name %>
                </a>

                <div class="dropdown">
                  <button class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                    id="dropdownMenuButton<%= childFolder.id %>" data-bs-toggle="dropdown" aria-expanded="false">
                    Actions
                  </button>
                  <% if( typeof isGuest==='undefined' ) {%>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= childFolder.id %>">
                      <li><a class="dropdown-item" href="/share/<%= childFolder.id %>/new">Share</a>
                      </li>
                      <li><a class="dropdown-item" href="/folders/<%= childFolder.id %>/update">Rename</a>
                      </li>
                      <li><a class="dropdown-item text-danger" href="/folders/<%= childFolder.id %>/delete">Delete</a>
                      </li>
                    </ul>
                    <%} %>
                </div>
              </li>
              <% }); %>
                <% } %>
      </ul>
      <ul class="file-list">
        <% if (Array.isArray(files) && files.length> 0) { %>
          <% files.forEach(function(file) { %>
            <li class="file-item">
              <a href="/files/<%= file.id %>" class="item-name">
                <%= file.name %>
              </a>
              <div class="dropdown">
                <button class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                  id="dropdownMenuButtonFile<%= file.id %>" data-bs-toggle="dropdown" aria-expanded="false">
                  Actions
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonFile<%= file.id %>">
                  <li><a class="dropdown-item" href="/files/<%= file.id %>/update">Rename</a></li>
                  <li><a class="dropdown-item text-danger" href="/files/<%= file.id %>/delete">Delete</a></li>
                </ul>
              </div>
            </li>
            <% }); %>
              <% } %>

      </ul>
    </div>
  </main>

  <footer>
    <%- include('./partials/footer'); %>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>