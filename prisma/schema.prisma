generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  folders   Folder[]
  files     File[]
}

model Folder {
  id               Int       @id @default(autoincrement())
  name             String
  parentFolder     Folder?   @relation("parentChildFolder", fields: [parentFolderId], references: [id])
  parentFolderId   Int?
  creator          User      @relation(fields: [creatorId], references: [id])
  creatorId        Int
  childFolders     Folder[]  @relation("parentChildFolder")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime?
  childFiles       File[]
  shareId          String    @unique @default(uuid())
  expiredDateShare DateTime?
}

model File {
  id             Int       @id @default(autoincrement())
  name           String
  parentFolder   Folder?   @relation(fields: [parentFolderId], references: [id])
  parentFolderId Int?
  creator        User      @relation(fields: [creatorId], references: [id])
  creatorId      Int
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  size           Float
  url            String
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
